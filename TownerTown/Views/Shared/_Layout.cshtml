@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] - TownerTown.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
          body{
                 height:100%
             }
        @@media (min-width: 320px, 375px) {
           
            body {
                font-size: 1.0em;
            }
            body .About{
                margin-top:11%
            }

                body .default-layout {
                    width: 10%
                }

                body .MainLayout {
                    width: 10%
                }

            #defaultImg {
                width: 100%;
                height: 50%
            }

            .container .container-fluid {
                margin-right: auto;
                margin-left: auto;
                padding-left: 15px;
                padding-right: 15px;
            }

            body .Index .categoryList {
                display: none
            }

            body .Register {
                width: 10%
            }

                body .Register .RegisterSubmitButton {
                    margin-right: 12%;
                }

                body .Register .input-xlarge {
                    width: 7%;
                }

            body .ViewBusiness .mobileTelephoneDetails2 {
                display: block;
            }

            body .ViewBusiness .mobileTelephoneDetails1 {
                display: none;
            }
        }

        @@media (min-width: 1336px) {
            body {
                font-size: 1.0em;
            }
            body .About{
                margin-top:6%
            }

                body .default-layout {
                    width: 100%
                }

                body .MainLayout {
                    width: 100%
                }

                body .Register {
                    width: 950px
                }

                    body .Register .RegisterSubmitButton {
                        margin-right: 45%;
                    }

                    body .Register .input-xlarge {
                        width: 50%;
                    }

                body .listview .categoryList {
                    display: block
                }



                body .ViewBusiness .mobileTelephoneDetails1 {
                    display: block;
                }

                body .ViewBusiness .mobileTelephoneDetails2 {
                    display: none;
                }
        }

        .navbar {
        }

        ul.nav a:hover {
            color: #fff !important;
        }

        .navbar-brand {
            color: #fff !important;
        }

        html {
            zoom: .8;
        }
    </style>
</head>
<body>

    @if (ViewBag.DefaultLayout == true)
    {
        <div class="default-layout" style="margin-top: 10% ">
            <button class="btn btn-link" style="position: absolute;left: 10px;top: 5px;"><a asp-area="" asp-controller="Home" asp-action="Faq">Need Help?</a></button>
            <button class="btn btn-primary" style="position: absolute;right: 10px;top: 20px;"><a asp-area="" asp-controller="Home" asp-action="LogIn" style="color:white">LogIn</a></button>
            <button class="btn btn-primary" style="position: absolute;right: 100px;top: 20px;"><a asp-area="" asp-controller="ManageBusiness" asp-action="Register" style="color:white">Register</a></button>

            @RenderBody()
        </div>

    }
    else
    {
        <div class="MainLayout" style="background-color:#F0F0F0; padding:0px">
            <div class="container-fluid MainLayout2"  style="padding:0px">
                <div>
                    <header style=" height: 4%;width: 100%">
                        <nav class="container-fluid fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#F0F0F0;">
                            @*<div class="container">*@
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h5 style="color:black">TownerTown.Web</h5></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="Faq">Faq</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                    </li>
                                    @if (@Context.Session.GetString("UserID") == null)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="LogIn">LogIn</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="ManageBusiness" asp-action="Register">Register</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" style="width:100%" asp-area="" asp-controller="ManageBusiness" asp-action="ViewProfile">Profile</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                            @*</div>*@
                        </nav>
                    </header>

                    @*<img style="height:180px; width:100%" src="~/lib/images/ShopImages/mainImg.jpg" />*@

                    @RenderBody()

                </div>

            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - TownerTown.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
